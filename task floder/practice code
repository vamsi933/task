
print("hello world")
a = 6
for i in range(1,a+1):
    star = "* "*(i-1)
    print(star)
# inverted rightangle triangle

a = 6
for i in range(1,a+1):
    star = "* "*(a-i)
    print(star)


# rightangle triangle
a = 6
for i in range(1,a+1):
    space = "  "*(a-i)
    print(space+"* "*i)


# pyramid pattern 
a = 6
for i in range(1,a+1):
    space = " "*(a-i)
    print(space+"* "*i)